<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_password_acitivty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.edn.washit.activity.ChangePasswordAcitivty"
    android:orientation="vertical">
    <include layout="@layout/toolbar"></include>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="3sp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >
            <EditText
                    android:id="@+id/newpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:textSize="12dp"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/ic_lock_grey_600_24dp"
                    android:background="@color/transparent"/>

                <EditText
                    android:id="@+id/confirmpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:drawablePadding="10dp"
                    android:paddingTop="10dp"
                    android:textSize="12dp"
                    android:inputType="textPassword"
                    android:paddingBottom="10dp"
                    android:drawableLeft="@drawable/ic_lock_grey_600_24dp"
                    android:background="@color/transparent"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btncorner"
        android:text="SAVE"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>
